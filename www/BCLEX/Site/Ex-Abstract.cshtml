@using Docs.Core
@{ Page.Title = "BclEx-Abstract Docs"; }
<h1>
    BclEx-Abstract Docs</h1>
<p>
    NuGet is a Visual Studio 2010 extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects that use the .NET Framework. This topic lists documentation that will help you use NuGet packages and create your own.
</p>
<ol class="topics">
    @foreach (var topic in Topic.GetTopics("~/docs-abstract"))
    {
        <li class="topic">
            <h2>@topic.Title</h2>
            @if (topic.SubTopics.Any())
            {
                <ol class="subTopics">
                    @foreach (var subTopic in topic.SubTopics)
                    {
                        <li class="subTopic">
                            <h3>
                                <a href="@subTopic.Url">@subTopic.Title</a></h3>
                        </li>
                    }
                </ol>
            }
        </li>
    }
</ol>
